                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:onClick="mySound5"
                android:text="Powerful Niggadry"
                android:textColor="@android:color/holo_orange_dark"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:onClick="mySound6"
                android:text="I am a Warrior"
                android:textColor="@android:color/holo_orange_dark"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:onClick="mySound7"
                android:text="Take Your Time"
                android:textColor="@android:color/holo_orange_dark"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:onClick="mySound8"
                android:text="Oh Yeah !!!"
                android:textColor="@android:color/holo_orange_dark"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:onClick="mySound9"
                android:text="Kick In your Chest"
                android:textColor="@android:color/holo_orange_dark"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:onClick="mySound10"
                android:text="Eat a Dick"
                android:textColor="@android:color/holo_orange_dark"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:onClick="mySound11"
                android:text="Xpress"
                android:textColor="@android:color/holo_orange_dark"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:onClick="mySound12"
                android:text="All Aboard"
                android:textColor="@android:color/holo_orange_dark"
                android:textStyle="bold"/>


        </LinearLayout>
    </ScrollView>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/Fab_Boondocks"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:padding="5dp"
        app:backgroundTint="@android:color/transparent"
        app:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2"
        app:layout_constraintVertical_bias="0.2"
        app:rippleColor="@android:color/transparent"
        app:srcCompat="@drawable/house" />






</android.support.constraint.ConstraintLayout>
